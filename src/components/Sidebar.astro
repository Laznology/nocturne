---
import AvatarCard from "./AvatarCard.astro";
import Navigation from "./Navigation.astro";
import ThemePopover from "./ThemePopover.astro";
import { Icon } from "astro-icon/components";
---

<aside
  class="bg-background relative h-[calc(100vh-3rem)] rounded-md flex flex-col justify-between w-64 overflow-y-auto"
>
  <div class="absolute inset-0 bg-accent rounded-md pointer-events-none z-0">
  </div>
  <div class="relative z-10 p-6 space-y-6 flex flex-col justify-between h-full">
    <AvatarCard />
    <div class="flex flex-col space-y-4">
      <Navigation />

      <div class="border-t border-border border-dashed pt-4">
        <a
          href="https://github.com/Laznology/benkyou"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 p-3 rounded-lg bg-accent transition-colors group"
        >
          <Icon name="mdi:github" class="w-5 h-5 text-foreground" />
          <div class="flex flex-col">
            <span class="text-xs text-muted-foreground">View on GitHub</span>
          </div>
          <Icon
            name="mdi:external-link"
            class="w-4 h-4 text-muted-foreground group-hover:text-foreground ml-auto"
          />
        </a>
      </div>

      <div class="hidden md:block">
        <ThemePopover />
      </div>
    </div>
  </div>
</aside>
