---
import { Icon } from "astro-icon/components";
import { GITHUB_URL, LINKEDIN_URL } from "../consts";
import { Image } from "astro:assets";

---

<div class="flex flex-col items-center text-center space-y-6">
  <div class="relative w-48 h-48">
    <div
      class="absolute inset-0 bg-black/20 translate-x-1 shadow translate-y-1 rounded-md"
    >
    </div>
    <Image
      src="https://i.pinimg.com/736x/28/d1/14/28d114c1b6edd0660d024f8ff8584bf3.jpg"
      alt="Profile Avatar"
      class="absolute inset-0 w-48 h-48 rounded-md object-cover z-10"
      priority
      loading="eager"
      decoding="sync"
      fetchpriority="high"
      height={192}
      width={192}
    />
  </div>

  <div class="space-y-2">
    <h1 class="!text-2xl font-bold text-foreground tracking-tight">ilazer</h1>
